{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@web/*": [ "framework/*" ],
            "@app/*": [ "src/*" ],
        },
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts",
        "framework/**/*.ts",
        "main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
